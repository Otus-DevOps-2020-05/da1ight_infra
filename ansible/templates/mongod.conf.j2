# Хранение данных
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

# Логирование
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# Сетевые интерфейсы
net:
# default - один из фильтров Jinja2, он задает значение по умолчанию, если переменная слева не определена
  port: {{ mongo_port | default('27017') }}
  bindIp: {{ mongo_bind_ip }} # <-- Подстановка значения переменной
